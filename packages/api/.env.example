# Database (default matches docker-compose)
DATABASE_URL="postgresql://soveuro:soveuro_secret@localhost:5432/soveuro"

# JWT (producción: JWT_SECRET / JWT_EXPIRES_IN; local también acepta JWT_ACCESS_*)
JWT_SECRET=your-jwt-secret-change-in-production
JWT_EXPIRES_IN=15m
JWT_REFRESH_SECRET=your-refresh-secret-change-in-production
JWT_REFRESH_EXPIRES_IN=7d
# Compatibilidad local:
# JWT_ACCESS_SECRET=...
# JWT_ACCESS_EXPIRES_IN=15m

# App
PORT=3000
NODE_ENV=development
# CORS: producción = lista de orígenes separados por coma (ej. https://tu-app.vercel.app,https://otro.dominio.com)
CORS_ORIGIN=

# Swagger: solo en dev por defecto; en prod usar SWAGGER_ENABLED=true para activar /docs
# SWAGGER_ENABLED=

# Payments (IAP verification)
# Si no hay credenciales reales, usar modo stub: simula ACTIVE 7 días
PAYMENTS_STUB=true

# Apple (solo si PAYMENTS_STUB=false)
# APPLE_SHARED_SECRET=   # From App Store Connect > App > App Information > App-Specific Shared Secret
# APPLE_BUNDLE_ID=       # ej. com.soveuro.app

# Google (solo si PAYMENTS_STUB=false)
# GOOGLE_PACKAGE_NAME=   # ej. com.soveuro.app
# GOOGLE_SERVICE_ACCOUNT_JSON=  # JSON completo del service account (Android Publisher API)
